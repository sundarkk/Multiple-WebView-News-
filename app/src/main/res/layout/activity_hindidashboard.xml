<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin = "10dp"
    android:layout_height = "match_parent"
    tools:context=".HindiDashboardActivity"
    android:orientation="vertical"
    android:weightSum="3"
    android:background="#607D8B">
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    android:elevation="50dp"
   app:cardBackgroundColor="#494848" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All Hindi News"
        android:textSize="25sp"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:typeface="serif"
        android:layout_gravity="center"
        android:textColor="#ffffff"
        android:textStyle="bold|normal"
        android:id="@+id/tv1"/>

</androidx.cardview.widget.CardView>



<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#000000"
    android:elevation="10dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/jagaran"
            android:scaleType="fitXY"
            android:id="@+id/btn1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jagaran"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:textColor="#ffffff"/>


    </LinearLayout>
</androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#000000"
        android:elevation="10dp"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/abp"
                android:scaleType="fitXY"
                android:id="@+id/btn2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Abp Lives"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:textColor="#ffffff"/>


        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#000000"
        android:elevation="10dp"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:src="@drawable/hindustan"
                android:scaleType="fitXY"
                android:id="@+id/btn3"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LiveHindustan"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:textColor="#ffffff"/>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>