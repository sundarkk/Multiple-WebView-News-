<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EnglishActivity"
    android:orientation="vertical"
    android:weightSum="3"
    android:background="#607D8B"
    android:layout_margin = "10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:elevation="50dp"
        app:cardBackgroundColor="#494848" >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="All English News"
        android:textSize="25sp"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:typeface="serif"
        android:textStyle="bold|normal"
        android:textColor="#ffffff"
        android:id="@+id/tv1"/>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#000000"
        android:elevation="10dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >


            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/hindustantimes"
                android:scaleType="fitXY"
                android:id="@+id/btn4"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HindustanTimes"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:textColor="#ffffff"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#000000"
        android:elevation="10dp"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/indiatv"
                android:scaleType="fitXY"
                android:id="@+id/btn5"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IndiaTv"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:textColor="#ffffff"/>


        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#000000"
        android:elevation="10dp"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:src="@drawable/indiatd"
                android:scaleType="fitXY"
                android:id="@+id/btn6"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IndiaToday"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:textColor="#ffffff"/>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>